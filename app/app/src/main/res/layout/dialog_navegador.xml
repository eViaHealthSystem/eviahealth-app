<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="860dp"
    android:layout_height="560dp"
    android:padding="16dp">

    <WebView
        android:id="@+id/webViewDialog"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/checkBoxAceptar"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBoxAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:text="He leÃ­do y acepto."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnCerrar"
        app:layout_constraintStart_toStartOf="parent" />

    <!--        Cancelar-->
    <Button
        android:id="@+id/btnCerrar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_weight="1"
        android:fontFamily="@font/britanic"
        android:onClick="onClick"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxAceptar"
        app:layout_constraintEnd_toStartOf="@+id/btnAceptar"
        app:layout_constraintTop_toTopOf="@+id/checkBoxAceptar" />


    <!--        Aceptar-->
    <Button
        android:id="@+id/btnAceptar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:fontFamily="@font/britanic"
        android:onClick="onClick"
        android:text="Aceptar"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxAceptar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkBoxAceptar" />

    <!--    Button Oculto 1-->
    <Button
        android:id="@+id/btnTecnico"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:onClick="onClick"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
