<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@drawable/enviandoresultados2">


    <ProgressBar
        android:id="@+id/activity_subirdatos_prograssbar"
        style="@style/smallpb"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:progressBackgroundTint="@android:color/darker_gray"
        android:progressTint="@color/recurrente"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/activity_subirdatos_prograssbar_sec"
        style="@style/smallpb"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginBottom="8dp"
        android:progressBackgroundTint="@android:color/darker_gray"
        android:progressTint="@color/recurrente"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/activity_subirdatos_prograssbar"
        app:layout_constraintEnd_toEndOf="@+id/activity_subirdatos_txt_info"
        app:layout_constraintStart_toStartOf="@+id/activity_subirdatos_txt_info" />

    <TextView
        android:id="@+id/activity_subirdatos_txt_porcentaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/questrial"
        android:text="texto"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/activity_subirdatos_prograssbar"
        app:layout_constraintEnd_toEndOf="@+id/activity_subirdatos_prograssbar"
        app:layout_constraintStart_toStartOf="@+id/activity_subirdatos_prograssbar"
        app:layout_constraintTop_toTopOf="@+id/activity_subirdatos_prograssbar" />

    <TextView
        android:id="@+id/activity_subirdatos_txt_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/questrial"
        android:text="texto"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/activity_subirdatos_prograssbar_sec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>