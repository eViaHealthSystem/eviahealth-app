<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_base"
    tools:context=".ui.admin.fichapaciente.CameraFoto">

    <!--    CAMARA-->
    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="300dp"
        android:layout_height="450dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/blackRectangle"
        android:layout_width="70dp"
        android:layout_height="300dp"
        android:background="@drawable/rounded_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toEndOf="@+id/viewFinder"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/capture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop"
        android:src="@drawable/round_camera_24"
        app:layout_constraintBottom_toBottomOf="@+id/blackRectangle"
        app:layout_constraintEnd_toEndOf="@+id/blackRectangle"
        app:layout_constraintStart_toStartOf="@+id/blackRectangle"
        app:layout_constraintTop_toTopOf="@+id/blackRectangle"
        app:tint="#fff" />

    <ImageButton
        android:id="@+id/flipCamera"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignParentEnd="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/round_flip_camera_android_24"
        app:layout_constraintBottom_toBottomOf="@+id/blackRectangle"
        app:layout_constraintEnd_toEndOf="@+id/blackRectangle"
        app:layout_constraintStart_toStartOf="@+id/blackRectangle"
        app:layout_constraintTop_toBottomOf="@+id/capture"
        app:layout_constraintVertical_bias="0.75"
        app:tint="#fff" />

    <!--    Button SALIR-->
    <Button
        android:id="@+id/exitButton"
        android:layout_width="52dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/salirbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    Texto Titulo -->
    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/britanic"
        android:gravity="center"
        android:text="Foto capturada"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/imagePreview"
        app:layout_constraintEnd_toStartOf="@+id/viewFinder"
        app:layout_constraintStart_toStartOf="parent" />

    <!--    IMAGEN MOSTAR-->
    <ImageView
        android:id="@+id/imagePreview"
        android:layout_width="160dp"
        android:layout_height="240dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/sinfotos"
        app:layout_constraintBottom_toBottomOf="@+id/viewFinder"
        app:layout_constraintEnd_toStartOf="@+id/viewFinder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewFinder" />

    <!--    Button ENVIAR-->
    <Button
        android:id="@+id/buttonEnviar"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/verdoso"
        android:fontFamily="@font/questrial"
        android:text="Enviar"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:backgroundTint="@color/verdoso"
        app:layout_constraintEnd_toEndOf="@+id/imagePreview"
        app:layout_constraintStart_toStartOf="@+id/imagePreview"
        app:layout_constraintTop_toBottomOf="@+id/imagePreview" />

</androidx.constraintlayout.widget.ConstraintLayout>